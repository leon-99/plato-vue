{
  "name": "plato-vue",
  "version": "1.2.8",
  "description": "A globally installable Vue.js and JavaScript Maintainability Index analyzer using Plato with clean modular architecture",
  "main": "index.js",
  "bin": {
    "plato-vue": "./index.js"
  },
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "test:unit": "jest --testPathPattern=\"test\" --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "build": "echo 'No build step required for Node.js'",
    "lint": "echo 'Add ESLint configuration here'",
    "clean": "Remove-Item -Recurse -Force test-* -ErrorAction SilentlyContinue; Remove-Item -Recurse -Force plato-report -ErrorAction SilentlyContinue"
  },
  "keywords": [
    "vue",
    "javascript",
    "maintainability",
    "code-quality",
    "code-analysis",
    "complexity",
    "plato"
  ],
  "author": "Win Khant Aung",
  "license": "MIT",
  "dependencies": {
    "plato": "^1.7.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leon-99/plato-vue.git"
  },
  "bugs": {
    "url": "https://github.com/leon-99/plato-vue/issues"
  },
  "homepage": "https://github.com/leon-99/plato-vue#readme"
}
